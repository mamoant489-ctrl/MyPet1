<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="344dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/singup1" />

    <TextView
        android:id="@+id/SingUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Sing up"
        android:textColor="@color/cardview_dark_background"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/arrow_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_lin"
        android:layout_marginStart="48dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/SingUpTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mark_email" />

        <EditText
            android:id="@+id/email_et"
            android:layout_width="242dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Email"
            android:textColor="@color/cardview_dark_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_lin"
        android:layout_marginStart="47dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/email_lin"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_username"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_icon" />

        <EditText
            android:id="@+id/username_et"
            android:layout_width="242dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Username"
            android:textColor="@color/cardview_dark_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_lin"
        android:layout_marginStart="47dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/username_lin"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/password_et"
            android:layout_width="242dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:fontFamily="@font/ubuntu_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/cardview_dark_background"
            />

    </LinearLayout>

    <Button
        android:id="@+id/sing_up_btn"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Sing up"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_lin" />

</androidx.constraintlayout.widget.ConstraintLayout>