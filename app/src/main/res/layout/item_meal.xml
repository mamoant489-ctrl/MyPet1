<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:background="#D4A284"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_compass"
            android:contentDescription="Тип записи" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- ПУСТО при создании записи это заполнит код -->
            <TextView
                android:id="@+id/tvMealTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#3A1F0F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMealSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="—"
                android:textColor="#8B4513"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMealAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="—"
            android:textColor="#3A1F0F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Удалить"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Редактировать"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
